# Environment variables for User Management System
# Copy this file to .env and fill in your actual values

# Supabase Configuration (for database access only)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-secret-key-here-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
PORT=8001

# Database Configuration (if using direct PostgreSQL instead of Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/user_management

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# Email Configuration (for password reset, optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Frontend Configuration
# API_BASE_URL=http://localhost:8001

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/private.key